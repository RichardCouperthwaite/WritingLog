<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    tools:context=".Statistics">

    <TextView
        android:id="@+id/tvReportsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="@string/stats.title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorMaroon"
        android:textStyle="bold"
        android:textSize="30sp" />

    <View
        android:id="@+id/sepMainTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvReportsTitle"
        android:background="@color/colorWhite"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sepMainTitle"
        android:text="Report Functions go here"/>

</RelativeLayout>