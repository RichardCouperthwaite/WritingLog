            android:id="@+id/action_newProjectFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProjectFragment"
        android:name="edu.tamu.richardcouperthwaite.writinglog.EditProjectFragment"
        android:label="fragment_edit_project"
        tools:layout="@layout/fragment_edit_project" >
