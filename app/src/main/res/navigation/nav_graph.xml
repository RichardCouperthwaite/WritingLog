        tools:layout="@layout/fragment_writing_session" >
        <action
            android:id="@+id/action_writingSessionFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="edu.tamu.richardcouperthwaite.writinglog.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" >
        <action
            android:id="@+id/action_statisticsFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
