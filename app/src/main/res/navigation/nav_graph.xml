            android:id="@+id/action_projectListFragment_to_writingSessionFragment"
            app:destination="@id/writingSessionFragment" />
        <action
            android:id="@+id/action_projectListFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/newProjectFragment"
        android:name="edu.tamu.richardcouperthwaite.writinglog.NewProjectFragment"
        android:label="fragment_new_project"
        tools:layout="@layout/fragment_new_project" >
        <action
            android:id="@+id/action_newProjectFragment_to_writingSessionFragment"
            app:destination="@id/writingSessionFragment" />
